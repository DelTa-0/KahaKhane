<%- include('partials/header', { title: 'Browse - KahaKhane' }) %>
<%- include('partials/_flash') %>

<!-- Leaflet CSS -->
<link
  rel="stylesheet"
  href="https://unpkg.com/leaflet/dist/leaflet.css"
/>

<div class="min-h-screen flex gap-10 px-6 py-12 bg-gray-50">

  <!-- Sidebar -->
  <aside class="w-1/4 space-y-10">
    <div class="space-y-4">
      <h3 class="text-lg font-semibold text-gray-700">Sort by</h3>
      <form action="/shop" class="w-full">
        <select class="w-full border border-gray-300 rounded-md px-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500" name="sortby">
          <option value="popular">Popular</option>
          <option value="newest">Newest</option>
        </select>
      </form>
    </div>

    <div class="space-y-4">
      <h3 class="text-lg font-semibold text-gray-700">Filter by</h3>
      <ul class="text-sm text-gray-600 space-y-1">
        <li><a href="#" class="hover:underline">Distance</a></li>
        <li><a href="#" class="hover:underline">Review</a></li>
      </ul>
    </div>
  </aside>

  <!-- Main Content -->
  <div class="flex-1">
    <!-- Product Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-8">
      <% restaurants.forEach(function(restaurant, index){ %>
        <% if (index < 12) { %>
          <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300">
            <div class="relative">
              <img src="https://st4.depositphotos.com/3029553/20930/i/450/depositphotos_209309416-stock-photo-sunrise-lake-colorful-autumn.jpg" alt="" class="w-full h-48 object-cover">
              <div class="absolute inset-0 bg-black opacity-20"></div>
            </div>
            <!-- Updated details section with distance -->
            <div class="p-6">
              <span class="block text-gray-500 text-sm"><%= restaurant.address %></span>
              <% if (restaurant.distance) { %>
                <span class="block text-gray-500 text-sm"><%= (restaurant.distance/1000).toFixed(2) %> km away</span>
              <% } %>
              <div class="flex items-center justify-between mt-4">
                <h4 class="font-semibold text-lg text-gray-800"><%= restaurant.name %></h4>
                <a href="/restaurant/details/<%= restaurant._id %>?search=<%= encodeURIComponent(query || '') %>" class="bg-orange-500 text-white text-xs px-4 py-2 rounded-lg hover:bg-orange-600 transition">Order</a>
              </div>
            </div>
          </div>
        <% } %>
      <% }); %>
    </div>

    <!-- Map -->
    <div class="mt-10">
      <h2 class="text-2xl font-bold mb-4 text-gray-800">Map View</h2>
      <div id="map" style="height:500px; width:100%;" class="rounded-lg shadow-md"></div>
    </div>

    <!-- Pagination -->
   <div class="flex justify-between items-center mt-8">
  <% if (currentPage > 1) { %>
    <a href="?page=<%= currentPage - 1 %>&lat=<%= latVal %>&lng=<%= lngVal %>"
       class="bg-gray-700 text-white px-6 py-3 rounded-lg hover:bg-gray-600 transition">
       ← Previous
    </a>
  <% } else { %>
    <span class="bg-gray-300 text-gray-500 px-6 py-3 rounded-lg cursor-not-allowed">← Previous</span>
  <% } %>

  <% if (currentPage < totalPages) { %>
    <a href="?page=<%= currentPage + 1 %>&lat=<%= latVal %>&lng=<%= lngVal %>"
       class="bg-gray-700 text-white px-6 py-3 rounded-lg hover:bg-gray-600 transition">
       Next →
    </a>
  <% } else { %>
    <span class="bg-gray-300 text-gray-500 px-6 py-3 rounded-lg cursor-not-allowed">Next →</span>
  <% } %>
</div>

  </div>
</div>

<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script>
  // Pass restaurants data from server to client
  const restaurants = <%- JSON.stringify(restaurants) %>;

  // Initialize map with default center (Kathmandu as fallback)
  const map = L.map('map').setView([27.7, 85.33], 13);

  // Add OpenStreetMap tiles
  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
  }).addTo(map);

  const bounds = [];

  // Plot restaurant markers
  restaurants.forEach(r => {
    if (r.location && r.location.coordinates && r.location.coordinates.length === 2) {
      const [lng, lat] = r.location.coordinates;
      bounds.push([lat, lng]);
      const popupContent = `
        <b>${r.name}</b><br/>
        ${r.address ? r.address : ''}<br/>
        ${r.distance ? (r.distance / 1000).toFixed(2) + ' km away' : ''}
      `;
      L.marker([lat, lng]).addTo(map).bindPopup(popupContent);
    }
  });

  // Fit map to all markers
  if (bounds.length > 0) {
    map.fitBounds(bounds, { padding: [50, 50] });
  }

  // Add "You are here" marker if user allows geolocation
  if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(pos => {
      const userLat = pos.coords.latitude;
      const userLng = pos.coords.longitude;

      const userIcon = L.icon({
        iconUrl: 'https://maps.google.com/mapfiles/ms/icons/blue-dot.png',
        iconSize: [32, 32],
        iconAnchor: [16, 32],
        popupAnchor: [0, -32]
      });

      L.marker([userLat, userLng], { icon: userIcon })
        .addTo(map)
        .bindPopup('<b>You are here!</b>')
        .openPopup();

      bounds.push([userLat, userLng]);
      if (bounds.length > 0) {
        map.fitBounds(bounds, { padding: [50, 50] });
      }
    }, err => {
      console.warn('Geolocation error:', err);
    });
  } else {
    console.warn('Geolocation not supported by this browser.');
  }
</script>

<%- include('partials/footer') %>
