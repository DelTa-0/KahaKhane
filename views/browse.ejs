<%- include('partials/header', { title: 'Home - Foodie' }) %>
<%- include('partials/_flash') %>

<div class="min-h-screen flex gap-10 px-10 py-10 bg-gray-50">

  <!-- Sidebar -->
  <aside class="w-[20%] space-y-10">
    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-gray-700">Sort by</h3>
      <form action="/shop">
        <select class="w-full border border-gray-300 px-3 py-2 rounded-md text-sm" name="sortby">
          <option value="popular">Popular</option>
          <option value="newest">Newest</option>
        </select>
      </form>
    </div>

    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-gray-700">Filter by</h3>
      <ul class="text-sm text-gray-600 space-y-1">
        <li><a href="#" class="hover:underline">Distance</a></li>
        <li><a href="#" class="hover:underline">Review</a></li>
      </ul>
    </div>
  </aside>

  <!-- Main Grid -->
  <div class="flex-1 flex flex-col justify-between">
    <!-- Product Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% restaurants.forEach(function(restaurant, index){ %>
        <% if (index < 12) { %>
          <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-200">
            <div class="relative">
              <img src="https://st4.depositphotos.com/3029553/20930/i/450/depositphotos_209309416-stock-photo-sunrise-lake-colorful-autumn.jpg" alt="" class="w-full h-48 object-cover">
              <div class="absolute inset-0 bg-black opacity-10"></div>
            </div>
            <div class="p-4 text-sm text-gray-700">
              <span class="block text-gray-500"><%= restaurant.Location %></span>
              <div class="flex items-center justify-between mt-2">
                <h4 class="font-semibold text-lg"><%= restaurant['Restaurant Name'] %></h4>
                <a class="bg-orange-500 text-white text-xs px-3 py-1 rounded hover:bg-orange-600 transition-colors" href="/restaurant/details/<%=restaurant._id%>">Order</a>
              </div>
            </div>
          </div>
        <% } %>
      <% }); %>
    </div>

    <!-- Pagination -->
    <div class="flex justify-between items-center mt-10">
      <% if (currentPage > 1) { %>
        <a href="?page=<%= currentPage - 1 %>" class="bg-gray-700 text-white px-5 py-2 rounded-md hover:bg-gray-600 transition">← Previous</a>
      <% } else { %>
        <div></div>
      <% } %>

      <% if (currentPage < totalPages) { %>
        <a href="?page=<%= currentPage + 1 %>" class="bg-gray-700 text-white px-5 py-2 rounded-md hover:bg-gray-600 transition">Next →</a>
      <% } %>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
