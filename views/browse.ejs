<%- include('partials/header', { title: 'Home - Foodie' }) %>
<%- include('partials/_flash') %>
<div>
<div class="w-full min-h-screen flex items-start px-20 py-20">
    <div class="w-[25%] flex h-full flex-col items-start">
        <div class="flex items-center gap-2">
            <h3>sort by</h3>
            <form action="/shop">
                <select class="border-[1px] px-2 py-1" name="sortby" id="">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>
        <div class="mt-32">
            <a class="block w-fit mb-2" href="">Filter by :</a>
            <a class="block w-fit mb-2" href="">Distance</a>
            <a class="block w-fit mb-2" href="">Review</a>
        </div>
    </div>

<div class="flex p-1 grid grid-cols-4 gap-6 h-screen">
  <% restaurants.forEach(function(restaurant, index){ %>
    <% if (index < 12) { %> <!-- Limit to 12 cards (3 rows * 4 columns) -->
      <div class="flex-shrink-0 relative overflow-hidden bg-orange-500 rounded-lg shadow-lg">
        <svg
          class="absolute bottom-0 left-0 mb-8"
          viewBox="0 0 375 283"
          fill="none"
          style="transform: scale(1.5); opacity: 0.1;">
          <rect
            x="159.52"
            y="175"
            width="152"
            height="152"
            rx="8"
            transform="rotate(-45 159.52 175)"
            fill="white" />
          <rect
            y="107.48"
            width="152"
            height="152"
            rx="8"
            transform="rotate(-45 0 107.48)"
            fill="white" />
        </svg>
        <div class="relative pt-10 px-10 flex items-center justify-center">
          <div
            class="block absolute w-48 h-48 bottom-0 left-0 -mb-24 ml-3"
            style="background: radial-gradient(black, transparent 60%); transform: rotate3d(0, 0, 1, 20deg) scale3d(1, 0.6, 1); opacity: 0.2;">
          </div>
          <img class="relative w-40" src="https://st4.depositphotos.com/3029553/20930/i/450/depositphotos_209309416-stock-photo-sunrise-lake-colorful-autumn.jpg" alt="" />
        </div>
        <div class="relative text-white px-6 pb-6 mt-6">
          <span class="block opacity-75 -mb-1"><%= restaurant.Location %></span>
          <div class="flex justify-between">
            <span class="block font-semibold text-xl"><%= restaurant['Restaurant Name'] %></span>
            <span class="block bg-white rounded-full text-orange-500 text-xs font-bold px-3 py-2 leading-none flex items-center">
              <!-- Add any additional information inside here if needed -->order
            </span>
          </div>
        </div>
      </div>
    <% } %>
  <% }); %>
  <!-- Pagination buttons -->
<div class="flex justify-between mt-6 bottom-0">
  <% if (currentPage > 1) { %>
    <a href="?page=<%= currentPage - 1 %>" class="bg-gray-800 text-white px-4 py-2 rounded-l-lg hover:bg-gray-600">Previous</a>
  <% } %>
  
  <% if (currentPage < totalPages) { %>
    <a href="?page=<%= currentPage + 1 %>" class="bg-gray-800 text-white px-4 py-2 rounded-r-lg hover:bg-gray-600">Next</a>
  <% } %>
</div>
</div>

</div>

<%- include('partials/footer') %>
