<%- include('partials/header', { title: restaurant['Restaurant Name'] + ' - Menu' }) %>
<%- include('partials/_flash') %>

<div class="min-h-screen bg-gray-50 px-8 py-10">
  <!-- Header Section -->
  <div class="mb-8">
    <a href="/restaurant/search" class="text-blue-500 hover:underline text-sm">&larr; Back to all restaurants</a>
    <h1 class="text-3xl font-bold text-gray-800 mt-2"><%= restaurant['Restaurant Name'] %></h1>
    <p class="text-gray-600 mt-1"><%= restaurant.Location %></p>
  </div>

  <!-- Menu Section -->
  <div class="space-y-10">
    <% if (restaurant.menu && restaurant.menu.length > 0) { %>
      <% restaurant.menu.forEach(category => { %>
        <div>
          <h2 class="text-2xl font-semibold text-gray-700 mb-4"><%= category.categoryName %></h2>
          <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
            <% category.items.forEach(item => { %>
              <div class="bg-white rounded-xl shadow hover:shadow-md transition overflow-hidden">
                <img src="<%= item.image || 'https://via.placeholder.com/400x200?text=No+Image' %>" alt="<%= item.name %>" class="h-40 w-full object-cover">
                <div class="p-4">
                  <h3 class="font-semibold text-lg text-gray-800"><%= item.name %></h3>
                  <p class="text-sm text-gray-600 mt-1"><%= item.description %></p>
                  <div class="mt-3 flex justify-between items-center">
                    <span class="text-orange-500 font-bold text-md">Rs. <%= item.price %></span>
                    <button class="bg-orange-500 text-white px-3 py-1 rounded text-sm hover:bg-orange-600 transition">Order</button>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-gray-500 italic">No menu items available for this restaurant.</p>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>
