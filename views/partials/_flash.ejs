<% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
  <div
    id="flash-success"
    class="relative bg-green-100 text-green-800 p-4 pr-10 rounded mb-4 shadow transition-opacity duration-500 ease-in-out"
  >
    <%= success_msg %>
    <button
      onclick="document.getElementById('flash-success').style.display='none'"
      class="absolute top-2 right-2 text-green-700 hover:text-green-900 font-bold text-lg leading-none focus:outline-none"
      aria-label="Close"
    >
      &times;
    </button>
  </div>

  <script>
    setTimeout(() => {
      const flash = document.getElementById('flash-success');
      if (flash) {
        flash.style.opacity = '0';
        setTimeout(() => flash.remove(), 500);
      }
    }, 3000);
  </script>
<% } %>

<% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
  <div
    id="flash-error"
    class="relative bg-red-100 text-red-800 p-4 pr-10 rounded mb-4 shadow"
  >
    <%= error_msg %>
    <button
      onclick="document.getElementById('flash-error').style.display='none'"
      class="absolute top-2 right-2 text-red-700 hover:text-red-900 font-bold text-lg leading-none focus:outline-none"
      aria-label="Close"
    >
      &times;
    </button>
  </div>
<% } %>
