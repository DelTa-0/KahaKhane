<%- include('partials/header', { title: 'Home - KahaKhane' }) %>
<%- include('partials/_flash') %>

<!-- Page Background -->
<main class="min-h-screen flex items-center justify-center bg-gradient-to-r from-indigo-100 via-blue-100 to-purple-200 px-4 py-12">
  <div class="w-full max-w-3xl mx-auto rounded-2xl backdrop-blur-md bg-white/30 shadow-2xl p-10 space-y-8 text-center animate__animated animate__fadeInDown">

    <h1 class="text-4xl md:text-5xl font-extrabold text-indigo-800 animate__animated animate__fadeInUp">
      Discover the Best Restaurants Around You ğŸ½ï¸
    </h1>
    <p class="text-lg text-gray-700 animate__animated animate__fadeInUp animate__delay-1s">
      Intelligent suggestions based on your location, preferences, and price.
    </p>

    <!-- Search Form -->
    <form action="/restaurant/search" method="GET" class="space-y-6 animate__animated animate__fadeInUp animate__delay-2s">
      <!-- Query & Location -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="relative">
          <input
            name="query"
            type="search"
            placeholder="ğŸ” Search restaurants or dishes"
            class="w-full rounded-xl px-6 py-4 border border-gray-300 bg-white/80 shadow-inner focus:outline-none focus:ring-2 focus:ring-indigo-400"
            required
          />
        </div>
        <div class="relative">
          <input
            name="location"
            type="text"
            placeholder="ğŸ“ Enter your city or area"
            class="w-full rounded-xl px-6 py-4 border border-gray-300 bg-white/80 shadow-inner focus:outline-none focus:ring-2 focus:ring-indigo-400"
          />
        </div>
      </div>

      <!-- Price -->
      <div>
        <input
          name="price"
          type="number"
          placeholder="ğŸ’° Max price (optional)"
          class="w-full rounded-xl px-6 py-4 border border-gray-300 bg-white/80 shadow-inner focus:outline-none focus:ring-2 focus:ring-indigo-400"
        />
      </div>

      <!-- Coordinates -->
      <input type="hidden" name="lat" id="lat" />
      <input type="hidden" name="lng" id="lng" />

      <!-- Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-2">
        <button
          type="button"
          id="getLocationBtn"
          class="bg-green-500 text-white font-semibold px-6 py-3 rounded-full shadow-md hover:bg-green-600 transition duration-300 w-full sm:w-auto"
        >
          ğŸ“ Use My Location
        </button>
        <button
          type="submit"
          class="bg-indigo-600 text-white font-semibold px-6 py-3 rounded-full shadow-md hover:bg-indigo-700 transition duration-300 w-full sm:w-auto"
        >
          ğŸ” Search
        </button>
      </div>
    </form>

    <!-- Optional Illustration -->
    <div class="mt-6 hidden md:block animate__animated animate__fadeInUp animate__delay-3s">
      <img src="/images/food-map.svg" alt="Find Restaurants" class="w-full max-h-64 object-contain mx-auto" />
    </div>
  </div>

  <!-- JS: Location Capture -->
  <script>
    const getLocationBtn = document.getElementById('getLocationBtn');
    const latInput = document.getElementById('lat');
    const lngInput = document.getElementById('lng');
    const searchForm = document.querySelector('form');

    getLocationBtn.addEventListener('click', () => {
      if (!navigator.geolocation) {
        alert('âŒ Geolocation is not supported by your browser.');
        return;
      }

      getLocationBtn.textContent = 'ğŸ“¡ Getting locationâ€¦';
      getLocationBtn.disabled = true;

      navigator.geolocation.getCurrentPosition(
        (position) => {
          latInput.value = position.coords.latitude;
          lngInput.value = position.coords.longitude;
          alert('ğŸ“ Location detected! Searching nearby restaurantsâ€¦');
          searchForm.submit();
        },
        (error) => {
          console.error('Geolocation error:', error);
          alert('âŒ Could not fetch location. Check permissions.');
          getLocationBtn.textContent = 'ğŸ“ Use My Location';
          getLocationBtn.disabled = false;
        }
      );
    });
  </script>
</main>

<%- include('partials/footer') %>
