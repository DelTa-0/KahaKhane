<%- include('partials/header') %>

<div class="min-h-screen bg-gray-50 py-10 px-4">
  <div class="max-w-4xl mx-auto space-y-10">

    <!-- Profile Info -->
    <div class="bg-white shadow rounded-xl p-6">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Profile Information</h2>
      <div class="flex items-center gap-6">
        <div class="h-20 w-20 rounded-full overflow-hidden border">
          <% if (user.picture) { %>
            <img src="/user-picture/<%= user._id %>" alt="Profile" class="object-cover h-full w-full">
          <% } else { %>
            <div class="bg-gray-200 h-full w-full flex items-center justify-center text-gray-500">
              <span class="text-xl font-bold"><%= user.fullname[0] %></span>
            </div>
          <% } %>
        </div>
        <div>
          <p class="text-lg font-semibold"><%= user.fullname %></p>
          <p class="text-sm text-gray-600"><%= user.email %></p>
          <p class="text-sm text-gray-600">Contact: <%= user.contact %></p>
        </div>
      </div>
    </div>

    <!-- Order History & Review Section -->
    <div class="bg-white shadow rounded-xl p-6">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Completed Orders</h2>

      <% if (orders.length === 0) { %>
        <p class="text-gray-500">You have no completed orders yet.</p>
      <% } else { %>
        <% orders.forEach(order => { %>
          <div class="border-t pt-6 mt-6">
            <h3 class="text-lg font-semibold text-indigo-700 mb-2">
              <%= order.restaurantName %> – <%= new Date(order.orderedAt).toLocaleDateString() %>
            </h3>

            <ul class="space-y-4">
              <% order.items.forEach(item => { %>
                <li class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 bg-gray-50 p-4 rounded-md">
                  <div>
                    <p class="font-medium"><%= item.foodName %> × <%= item.quantity %></p>
                    <p class="text-sm text-gray-600">Price: $<%= item.price %></p>
                  </div>

                  <!-- Review Form -->
                  <form action="/review/<%= order.restaurant_id %>/<%= item.foodName %>" method="POST" class="flex flex-col sm:flex-row gap-2 w-full sm:w-auto">
                    <input type="number" name="rating" min="1" max="5" required placeholder="⭐" class="border p-2 rounded w-20 text-sm" />
                    <input type="text" name="review" required placeholder="Leave a review..." class="border p-2 rounded flex-1 text-sm" />
                    <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-md text-sm hover:bg-indigo-700">Submit</button>
                  </form>
                </li>
              <% }) %>
            </ul>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
