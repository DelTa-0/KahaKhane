<%- include('partials/header') %>
<%- include('partials/_flash') %>
<div class="max-w-2xl mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-6 text-center">Leave a Review</h2>

  <form action="/review" method="POST">
    <input type="hidden" name="restaurant_id" value="<%= restaurant_id %>">

    <div class="mb-4">
      <label for="review" class="block text-gray-700 font-medium mb-2">Your Feedback:</label>
      <textarea name="review" id="review" rows="4"
        class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
        placeholder="Write your review here..."></textarea>
    </div>

    <button type="submit"
      class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg text-lg font-semibold hover:bg-blue-700">
      Submit Review
    </button>
  </form>
</div>

<%- include('partials/footer') %>
